#define _CRT_SECURE_NO_WARNINGS 1
#include <stdio.h>
#include <errno.h>
#include <string.h>
int main()
{
	//打开文件test.txt
	//相对路径
	//..表示上一级路径
	//.表示当前路径
	// 相对路径写法
	//fopen("test.txt", "r");
	//FILE* fopen(const char* filename, const char* mode);
	//绝对路径写法，这里test.txt位于当前路径下
	//fopen("C:\\Users\\PC\Desktop\\C\code\\test2023_04_28\\test2023_04_28\\test.txt", "r");
	FILE* pf = fopen("test.txt", "r");
	if (pf == NULL)
	{
		printf("%s\n",strerror(errno));
		return 0;
	}
	fclose(pf);
	pf = NULL;

	return 0;
}



