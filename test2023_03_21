int main()
{
	int n = 9;
	//00000000 00000000 00000000 00001001--补码
	float* pFloat = (float*)&n;
	printf("n的值为：%d\n", n);//9
	//00000000 00000000 00000000 00001001--补码
	//0 00000000 00000000000000000001001--补码
	//s=0 E=00000000 M=0.00000000000000000001001
	// E全0，1-127=-126
	//(-1)^0 * 0.00000000000000000001001 * 2^(-126)近似为0
	printf("*pFloat的值为：%f\n", *pFloat);

	*pFloat = 9.0;
	//1001.0
	//(-1)^0 * 1.001 * 2^3
	//s=0 E=3+127--10000010 M=1.001
	//0 10000010 00100000000000000000000
	//01000001 00010000 00000000 00000000
	printf("num的值为：%d\n", n); //1,091,567,616
	printf("*pFloat的值为：%f\n", *pFloat);//9.000000
	return 0;
}

