//
//	pf = NULL;
//	return 0;
//}

int main()
{
	struct S tmp = { 0 };
	//以二进制的形式读文件
	FILE* pf1 = fopen("test.txt", "rb");
	if (pf1 == NULL) return 0;
	fread(&tmp, sizeof(struct S), 1, pf1);
	//在屏幕上看看
	printf("%s %d %lf", tmp.name, tmp.age, tmp.score);
	fclose(pf1);
	pf1 = NULL;
	return 0;
}

