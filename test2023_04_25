struct S
{
	int n;
	int* arr;
};
int main()
{
	struct S* p=(struct S*)malloc(sizeof(struct S));
	p->n = 100;
	p->arr = (int*)malloc(10 * sizeof(int));
	int i = 0;
	for (i = 0; i < 10; i++)
	{
		p->arr[i] = i; //arr[i]==*(a+i)
	}
	for (i = 0; i < 10; i++)
	{
		printf("%d\n", p->arr[i]) ;
	}
	free(p->arr);
	p->arr = NULL;
	free(p);
	p = NULL;
	return 0;
}




